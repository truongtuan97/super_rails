<h1>Users: <%= "#{@users.length} / #{User.count}" %></h1>

<%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

<%= sort_link(@q, :email) do %>
  <strong>Email</strong>
<% end %>
 - 
<%= sort_link(@q, :created_at) do %>
  <strong>Created</strong>
<% end %>
-
<%= sort_link(@q, :posts_count, defaul_order: :desc) do %>
  <strong>Posts counter</strong>
<% end %>


<%= search_form_for @q do |f| %>
  <%= f.label :email_cont %>
  <%= f.search_field :email_cont %>

  <%= f.submit %>
<% end %>

<hr>
<% @users.each do |user| %>
  <%= render "users/user", user: user %>
  <br>
<% end %>